{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}
    <div class="p-5">
        <h1 class="text-2xl font-bold mb-5">Liste des films</h1>
        <div class="grid grid-cols-3 gap-4">
            {% for movie in pagination.items %}
                <div class="bg-white shadow-md rounded p-4">
                    <img src="{{ movie.image }}" alt="{{ movie.title }}" class="mb-3 rounded">
                    <h2 class="text-xl font-semibold">{{ movie.title }}</h2>
                    <p class="text-gray-600">Année de sortie : {{ movie.releaseYear }}</p>
                    <a href="{{ path('movie_show', { id: movie.id }) }}"
                       class="inline-block mt-3 bg-blue-500 text-white px-3 py-1 rounded">
                       Voir le détail
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="mt-5">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
