{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-5 p-5">Fiche détaillée</h1>

    <div class="bg-white flex gap-8 shadow-md rounded p-5 mb-4">
        <img src="{{ movie.image }}" alt="{{ movie.title }}" class="mb-5 rounded w-1/3 mx-auto">
        <div>
            <h1 class="text-3xl font-bold mb-4">{{ movie.title }}</h1>
            <p class="text-gray-700"><strong>Année de sortie :</strong> {{ movie.releaseYear }}</p>
            
            {% if movie.synopsis %}
                <p class="mt-2"><strong>Synopsis :</strong> {{ movie.synopsis }}</p>
            {% endif %}
            <p class="mt-2"><strong>Durée par épisode :</strong> {{ movie.duration ?? 'N/A' }} min</p>
            {% if movie.studio %}
                <p class="mt-2"><strong>Studio :</strong> {{ movie.studio.name }}</p>
            {% endif %}
            {% if movie.directors is not empty %}
                <p class="mt-2"><strong>Directeurs :</strong> {{ movie.directors|map(d => d.name)|join(', ') }}</p>
            {% endif %}
            {% if movie.characters is not empty %}
                <p class="mt-2"><strong>Personnages :</strong> {{ movie.characters|map(c => c.name)|join(', ') }}</p>
            {% endif %}
            {% if movie.genres is not empty %}
                <p class="mt-2"><strong>Genres :</strong> {{ movie.genres|map(g => g.name)|join(', ') }}</p>
            {% endif %}
            <div class="flex justify-start items-center gap-4">
                <a href="{{ path('movie_list') }}" class="inline-block mt-5 border border-blue-500 text-blue-500 px-3 py-1 rounded">
                    Retour à la liste
                </a>
                <a href="{{ path('movie_edit', { id: movie.id }) }}" class="inline-block mt-5 bg-blue-500 text-white px-3 py-1 rounded">
                    Modifier le film
                </a>
            </div>

        </div>
    </div>
{% endblock %}
