{% extends 'base.html.twig' %}

{% block title %}Liste des Animes{% endblock %}

{% block body %}
    <div class="p-5">
        <h1 class="text-2xl font-bold mb-5">Liste des Animes</h1>
        <div class="grid grid-cols-3 gap-4">
            {% for anime in pagination.items %}
                <div class="bg-white shadow-md rounded p-4">
                    <img src="{{ anime.image }}" alt="{{ anime.title }}" class="mb-3 rounded">
                    <h2 class="text-xl font-semibold">{{ anime.title }}</h2>
                    <p class="text-gray-600">Année de sortie : {{ anime.releaseYear }}</p>
                    <a href="{{ path('anime_show', { id: anime.id }) }}"
                       class="inline-block mt-3 bg-blue-500 text-white px-3 py-1 rounded">
                       Voir le détail
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="mt-5">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
