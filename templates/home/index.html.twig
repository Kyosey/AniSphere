{% extends 'base.html.twig' %}

{% block title %}Accueil | MyAnimeDB{% endblock %}

{% block body %}
    <div class="relative bg-[url('https://www.pixelstalk.net/wp-content/uploads/images8/Anime-Backgrounds-HD.jpg')] bg-cover bg-center h-130">
        <div class="absolute inset-0 bg-black flex items-center justify-center" style="background-color: rgba(0, 0, 0, 0.6);">
            <div class="text-center text-white">
                <h1 class="text-4xl font-bold mb-5">Bienvenue sur AnySphere !</h1>
                <p class="mb-5">
                    Découvrez une collection de films et séries d'animation japonais, ajoutez vos favoris et explorez les fiches détaillées.
                </p>
            </div>
        </div>
    </div>

    <div class="p-5">
        <h2 class="text-2xl font-bold mb-3">Derniers animes ajoutés</h2>
        <div class="grid grid-cols-3 gap-4">
            {% for anime in animes %}
                <div class="bg-white shadow-md rounded p-4">
                    <img src="{{ anime.image }}" alt="{{ anime.title }}" class="mb-3 rounded">
                    <h3 class="text-xl font-semibold">{{ anime.title }}</h3>
                    <p class="text-gray-600">Année de sortie : {{ anime.releaseYear }}</p>
                    <a href="{{ path('anime_show', { id: anime.id }) }}"
                       class="inline-block mt-3 bg-blue-500 text-white px-3 py-1 rounded">
                       Voir le détail
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="p-5">
        <h2 class="text-2xl font-bold mb-3">Derniers films ajoutés</h2>
        <div class="grid grid-cols-3 gap-4">
            {% for movie in movies %}
                <div class="bg-white shadow-md rounded p-4">
                    <img src="{{ movie.image }}" alt="{{ movie.title }}" class="mb-3 rounded">
                    <h3 class="text-xl font-semibold">{{ movie.title }}</h3>
                    <p class="text-gray-600">Année de sortie : {{ movie.releaseYear }}</p>
                    <a href="{{ path('movie_show', { id: movie.id }) }}"
                       class="inline-block mt-3 bg-blue-500 text-white px-3 py-1 rounded">
                       Voir le détail
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
